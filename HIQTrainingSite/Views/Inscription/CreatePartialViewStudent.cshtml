@model HIQTrainingSite.ViewModel.StudentViewModel

@{
    ViewBag.Title = HIQResources.titleStudent;
    @section css
        {
        <link href="@Url.Content("~/layout/css/stylesformador.css")" rel="stylesheet" />
    }
}

<div class="mainblock">
    <div class="block-group">
        <div class="ttitle title">@HIQResources.titleStudent @HIQResources.titleAdd</div>
    </div>

    <div class="md-content">
        <div class="block-group">
            @using (Html.BeginForm("create", "Student", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.Hidden("createStudentByInscription")
                @Html.Hidden("courseId")
                @Html.Hidden("isExternal", null , new { @id= "isExternalbyInscription"})


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.Label("Tipo de Empresa", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-8">
                            <label class="checkbox-inline"><input type="checkbox" id="checkboxInternal2" value="" @ViewBag.statusChekedboxInternal2>Formando Interno</label>
                            <label class="checkbox-inline"><input type="checkbox" id="checkboxExternal2" value="" @ViewBag.statusChekedboxExternal2>Formando Externo</label>
                        </div>
                    </div>
                    <div id="formularioStudent2" style="display:none;">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CompanyId, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.Companies.SelectedCompanyId, Model.Companies.CompanyNames, htmlAttributes: new { @class = "form-control inputForm" })
                                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.HiddenFor(model => model.Id)
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control inputForm", @id="studentName", @name= "studentName" } })
                                @Html.ValidationMessage("", "", new { @class = "text-danger", @id="duplicateName" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control inputForm", @id= "EmailPartialStudent" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control inputForm" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Observation, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.Observation, new { htmlAttributes = new { @class = "form-control inputForm" } })
                                @Html.ValidationMessageFor(model => model.Observation, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="@HIQResources.buttonSave" class="btn btn-default btn-sm btn-formation" id="insertStudent" />
                            @Html.ActionLink(HIQResources.buttonBack, "Index", null, new { @class = "btn btn-default btn-sm btn-edit", Href = Request.UrlReferrer })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
