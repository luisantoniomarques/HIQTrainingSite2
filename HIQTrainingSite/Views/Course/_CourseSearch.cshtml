@model HIQTrainingSite.ViewModel.CourseListViewModel

@using(Html.BeginForm("Index", "Course", FormMethod.Get, new { @id = "form-create" })) {
    <div id="target">
        <br />
        <div class="form-horizontal">

            <div class="row">
                <div class="form-group col-md-6">
                    @Html.Label(@HIQResources.labelCourseName, null, new { @class = "control-label col-md-2" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Search.Nome, new
                   {
                       htmlAttributes = new { @class = "form-control" }
                   })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.Label(@HIQResources.labelCourseLevel, null, new { @class = "control-label col-md-2" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Search.Nivel, new
                   {
                       htmlAttributes = new { @class = "form-control" }
                   })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    @Html.Label(@HIQResources.labelTeacherName, null, new { @class = "control-label col-md-2" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Search.Formador, new
                   {
                       htmlAttributes = new { @class = "form-control" }
                   })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.Label(@HIQResources.labelStartDate, null, new { @class = "control-label col-md-2" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Search.DataInicio, new
                   {
                       htmlAttributes = new { @class = "form-control" }
                   })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    @Html.Label(HIQResources.labelCourseStatus, null, new { @class = "control-label col-md-2" })
                    <div class="col-md-7">
                        @Html.DropDownListFor(x => Model.Search.Estado, Model.Search.StateItems, @HIQResources.dropdownAllOptions, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.Label(@HIQResources.labelFormativeEntityName, null, new { @class = "control-label col-md-2" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Search.EntidadeFormativa, new
                   {
                       htmlAttributes = new { @class = "form-control" }
                   })
                        @*@Html.DropDownListFor(x => Model.Search.Estado, Model.Search.StateItems, HIQResources.dropdownAllOptions, new { @class = "form-control" })*@
                    </div>
                </div>
            </div>

            <br />
            <div class="row">
                <div class="text-center">
                    <input type="reset" value=@HIQResources.buttonClean class="btn btn-primary" id="btn-reset" />
                    <input type="submit" value=@HIQResources.buttonSearch class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

